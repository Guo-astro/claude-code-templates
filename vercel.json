{
  "version": 2,
  "public": true,
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": "docs",
  "rewrites": [
    {
      "source": "/component/([^/]+)/([^/]+)",
      "destination": "/component.html?type=$1&name=$2"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/blog",
      "destination": "/blog/"
    },
    {
      "source": "/supabase-claude-code-integration",
      "destination": "/blog/supabase-claude-code-integration/"
    },
    {
      "source": "/nextjs-vercel-claude-code-integration",
      "destination": "/blog/nextjs-vercel-claude-code-integration/"
    }
  ],
  "cleanUrls": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/js/(.*).js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/css/(.*).css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}